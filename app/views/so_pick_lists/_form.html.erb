<%= form_for(@so_pick_list) do |f| %>
  <% if @so_pick_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@so_pick_list.errors.count, "error") %> prohibited this so_pick_list from being saved:</h2>

      <ul>
      <% @so_pick_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-4 col-md-offset-4 pad-10"> 
      <% options = options_from_collection_for_select(SalesOrder.where(:order_status_id => 2), 'id', 'id') %>
      <%= f.select :sales_order_id, options, :input_html => { class: "form-control" } %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <%= f.submit "Cancel", class: "btn btn-danger" %>
    </div>
    <div class="col-md-2 col-md-offset-0">
      <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#myModal">Generate Pick List</button>
    </div>
  </div>

<!-- confirmaiton modal starts here -->
  
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
         <div class="modal-dialog">
            <div class="modal-content" style="font-size: 2em; ">
               <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
               </div>
               <div class="modal-body">Are you sure?</div>
               <div class="modal-footer" style="border: none">
                 <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                 <button class="btn btn-success">Yes</button>
               </div>
           </div>
         </div>
      </div>

<% end %>
