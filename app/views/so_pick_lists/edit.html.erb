<h1>Editing So Pick List</h1>

<h3>Sales Orders Ready to be Picked</h3>

<table class="table table-striped table-condensed" >
  <thead>
    <tr>
      <th>Sales Order ID</th>
      <th>Customer account</th>
      <th>Placed On</th>
      <th>Order status</th>
    </tr>
  </thead>

  <tbody>
    <% @orders = SalesOrder.where(:order_status_id => 2).limit(8) %>
    
    <% @orders.each do |so| %>  
      <tr>
        <td><%= so.id %></td>
        <td><%= so.customer_account_id %></td>
        <td><%= so.created_at %></td>
        <td>Processed</td>  
      </tr>
    <% end %>
  </tbody>
  
</table>

<br>

<%= render 'form' %>

<%= link_to 'Show', @so_pick_list %> |
<%= link_to 'Back', so_pick_lists_path %>
